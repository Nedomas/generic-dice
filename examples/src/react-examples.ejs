doctype html
html(lang="en")
  head
    title=htmlWebpackPlugin.options.title
  body
    h1=htmlWebpackPlugin.options.title
    ul
      li
        a(href="index.html") Home
      li.current
        span React examples
      li
        a(href="vanilla-examples.html") Vanilla.js (plain Javascript) examples

    #react-game

    p=htmlWebpackPlugin.options.nadjib

    h2 Trigger a roll

    h3 Default maximum duration:
    pre const rollingEvent = new CustomEvent('roll');
    pre window.document.dispatchEvent(rollingEvent);

    h3 Custom maximum duration:
    pre const rollingEvent = new CustomEvent('roll', { detail: { duration: 900 } });
    pre window.document.dispatchEvent(rollingEvent);

    script(src=htmlWebpackPlugin.options.bundle)
